<div class="form-group">
  <%= form_for @book do |f| %>

    <div>
      <%= f.label :title %>
      </br>
      <%= f.text_field :title, class: 'form-control' %>
      <% if @book.errors[:title] %>
          <%= @book.errors[:title].join(', ') %>
      <% end %>
    </div>

    <div>
      <%= f.label :page %>
      </br>
      <%= f.text_field :page, class: 'form-control' %>
      <% if @book.errors[:page] %>
          <%= @book.errors[:page].join(', ') %>
      <% end %>
    </div>

    <div>
      <%= f.label :year %>
      </br>
      <%= f.text_field :year, class: 'form-control' %>
      <% if @book.errors[:year] %>
          <%= @book.errors[:year].join(', ') %>
      <% end %>
    </div>

    <div>
      <%= f.label :description %>
      </br>
      <%= f.text_area :description, class: 'form-control' %>
      <% if @book.errors[:description] %>
          <%= @book.errors[:description].join(', ') %>
      <% end %>
    </div>

    <div>
      <%= f.submit button_text, class: 'btn btn-primary' %>
      <%= link_to "Kembali", books_path, class: 'btn btn-primary'%>
    </div>

  <% end %>
</div>